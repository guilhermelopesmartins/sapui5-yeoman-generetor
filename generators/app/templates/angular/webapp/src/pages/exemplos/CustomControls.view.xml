<core:View
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	height="100%"
	xmlns:sing="<%= appName %>.controls.signature"
	xmlns:custom="<%= appName %>.controls"
	xmlns:quillEditor="<%= appName %>.controls.quill"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	controllerName="<%= appName %>.src.pages.exemplos.CustomControls">

	<Page title="{i18n>Commom.ControlTest}"  >
	<content>
	<Panel expandable="true" expanded="false" width="auto" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar height="3rem" style="Clear">
				<Title text="Input de Assinaturas" />
				<Button icon="sap-icon://text-color" text="Cor da caneta" press="openDefaultModeSample" />
				<Button icon="sap-icon://signature" text="Assinar" press="activateSignature" />
				<Button icon="sap-icon://eraser" text="Limpar" press="clearSignature" />
				<Button icon="sap-icon://save" text="Salvar" press="exportSignature" />
				<ToolbarSpacer />
			</Toolbar>
		</headerToolbar>
		<content>
				<FlexBox
					alignItems="Center"
					direction="Column"
					justifyContent="SpaceBetween">
					<items>
						<sing:UISignature
							id="signature"
							width="500px"
							penColor="black"
							bgColor="white"
							underline="true" />
						<ToolbarSpacer />

						<Image
							src="{signature>/signatureIMG}"
							densityAware="false"
						/>


					</items>
				</FlexBox>
		</content>
	</Panel>

	<Panel expandable="true" expanded="false" width="auto" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar height="3rem" style="Clear">
				<Title text="Paginador" />

				<ToolbarSpacer />
			</Toolbar>
		</headerToolbar>
		<content>
				<FlexBox
					alignItems="Center"
					direction="Column"
					justifyContent="SpaceBetween">
					<items>
					<custom:Paginator count="100" currentPage="10" onSelectPage="onPageChanged" />

					</items>
				</FlexBox>
		</content>
	</Panel>

	<Panel expandable="true" expanded="false" width="auto" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar height="3rem" style="Clear">
				<Title text="Centros de custo" />

				<ToolbarSpacer />
			</Toolbar>
		</headerToolbar>
		<content>
				<FlexBox
					alignItems="Center"
					direction="Column"
					justifyContent="SpaceBetween">
					<items>
					<core:Fragment fragmentName="<%= appName %>.src.pages.centercosts.CenterCostsShow" type="XML"> </core:Fragment>

					</items>
				</FlexBox>
		</content>
	</Panel>


	<Panel expandable="true" expanded="false" width="auto" class="sapUiResponsiveMargin">
		<headerToolbar>
			<Toolbar height="3rem" style="Clear">
				<Title text="Html Editor" />
				<Button icon="sap-icon://signature" text="Preencher " press="fillHtmlValue" />


			</Toolbar>
		</headerToolbar>
		<content>

			<quillEditor:QuillEditor value="{htmlEditor>/value}" />
			<Panel>

			<Toolbar design="Info" style="Clear">
				<Title text="Resultado" />
			</Toolbar>
				<content>
					<Text text="{htmlEditor>/value}" />
				</content>
			</Panel>


		</content>
	</Panel>
	</content>
	</Page>

</core:View>
