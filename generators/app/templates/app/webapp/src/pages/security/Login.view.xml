<mvc:View
	controllerName="<%= appName %>.src.pages.security.Login"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	height="100%">
	<Page  backgroundDesign="Transparent" showHeader="false" id="<%= appName %>LoginPage" >
		<content>
			<VBox  fitContainer="true"  justifyContent="Center" alignItems="Center" alignContent="Center">
				<VBox
					id="loginBox"
					class="sapUiContentPadding round shodow"
					width="232px"
					backgroundDesign="Solid"
					alignItems="Center"
					alignContent="Center">

						<Image  src="webapp/img/Logo.png" ></Image>
						<Input id="userName" placeholder="{i18n>Commom.User}" value="{/UserName}">
							<layoutData>
								<FlexItemData growFactor="1" minWidth="100%" />
							</layoutData>
						</Input>
						<Input id="userPass" placeholder="{i18n>Commom.Password}" type="Password" value="{/Password}" >
							<layoutData>
								<FlexItemData growFactor="1" minWidth="100%" />
							</layoutData>
						</Input>
						<Button id="loginButton" width="100%" text="{i18n>Commom.Login}" type="Emphasized" press="onLogin">
							<layoutData>
									<FlexItemData growFactor="1" minWidth="100%" />
							</layoutData>
						</Button>

				</VBox>
			</VBox>
		</content>
	</Page>
</mvc:View>
